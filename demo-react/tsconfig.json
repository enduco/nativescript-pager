{
    "compilerOptions": {
        "module": "esnext",
        "target": "es2017",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "jsx": "react",
        "lib": [
            "es6",
            "dom"
        ],
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "app/*"
            ],
            "*": [
                "./node_modules/*"
            ]
        }
    },
      "include": [
        "../src",
        "**/*"
      ],
    "exclude": [
        "node_modules",
        "platforms",
        "../src/node_modules",
        "**/*.spec.ts"
    ]
}
