{
    "compilerOptions": {
        "target": "es2017",
        "module": "esnext",
        "moduleResolution": "node",
        "declaration": true,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["es6", "dom"],
        "sourceMap": true,
        "pretty": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "noEmitHelpers": true,
        "noEmitOnError": false,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noImplicitUseStrict": false,
        "noFallthroughCasesInSwitch": true,
        "jsx": "react",
        "plugins": [{ "transform": "@nativescript/webpack/transformers/ns-transform-native-classes.js", "type": "raw" }]
  },
    "include":[
        "**/*.ts",
        "!*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "angular",
        "react"
    ],
    "compileOnSave": false,
    "angularCompilerOptions": {
        "skipTemplateCodegen": true
    }
}
